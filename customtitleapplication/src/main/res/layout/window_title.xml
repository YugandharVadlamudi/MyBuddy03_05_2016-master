<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:orientation="horizontal"
              android:background="@color/title_backgroundcolor"
    >

    <ImageView
        android:id="@+id/iv_windowtitle_menu"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_contactviewpager_call_64"
        />

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_weight="1">

        <TextView
            android:id="@+id/tv_windowtitle_Title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="hello"
            android:textSize="@dimen/size_title_header"
            android:textColor="@color/tv_windowtitle"
            android:textStyle="bold"
            android:layout_centerInParent="true"


            />
    </RelativeLayout>

    <ImageView
        android:id="@+id/iv_windowtitle_createcontact"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_contactviewpager_call_64"
        />
</LinearLayout>